<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="Button.button">
    <Setter Property="Background" Value="{DynamicResource GreyColor}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="15 5" />
  </Style>
  <Style Selector="Button.button:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource LightGreyColor}" />
  </Style>
  <Style Selector="Button.button:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource LightGreyColor}" />
  </Style>

</Styles>