<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <Style Selector="ScrollBar /template/ RepeatButton:pointerover > Path">
    <Setter Property="Fill" Value="{StaticResource PrimaryColorLight}" />
  </Style>

  <Style Selector="ScrollBar /template/ RepeatButton:pressed > Path">
    <Setter Property="Fill" Value="{StaticResource PrimaryColor}" />
  </Style>

</Styles>